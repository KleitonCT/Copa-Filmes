@model CopaFilmes.Presentation.Models.FilmeViewModel

<div class="jumbotron">
    <p>CAMPEONATO DE FILMES</p>
    <h2>Resultado Final</h2>
    <p class="lead">Veja o resultado final do Campeonato de forma simples e rápida.</p>
</div>

<div class="row">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "formFilme" }))
    {
        <div class="container">
            <div class="row alert alert-success" role="alert">
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <h1>1º</h1>
                </div>
                <div class="col-lg-10 col-md-10 col-sm-10">
                    <h2>@Model.Filmes[0].Titulo</h2>
                </div>
            </div>

            <div class="row alert alert-warning" role="alert">
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <h1>2º</h1>
                </div>
                <div class="col-lg-10 col-md-10 col-sm-10">
                    <h2>@Model.Filmes[1].Titulo</h2>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-block" value="Voltar" />
            </div>
        </div>
    }
</div>